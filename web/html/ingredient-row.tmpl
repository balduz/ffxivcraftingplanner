{{define "ingredient-row"}}
  {{range .Ingredients}}
    <div class="row align-items-center custom-striped-table py-2 border border-top-0 border-secondary" data-id="{{.Item.ID}}">
      <div class="col text-left">
        <img class="rounded" style="width: 48px; height: 48px;" src={{.Item.Icon}}>
      </div>
      <div class="col text-left">{{.Item.Name}}</div>
      <div class="col text-left">{{.Quantity}}</div>
      <div class="col text-left">
        <div class="d-flex flex-row">
          {{if .Item.Obtained.IsGathering}}
            <div class="p-2 ingredients-modal">
              <img class="rounded" style="width: 30px; height: 30px;" src="/web/assets/icons/logging.png">
            </div>

            <!-- Modal -->
            <div class="modal fade text-dark" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title">Gathering Locations</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body">
                    {{range .Item.Obtained.Gathering}}
                      <p>Class: {{.ClassName}}. Location: {{.Location}}</p>
                    {{end}}
                  </div>
                </div>
              </div>
            </div>

          {{end}}
          {{if .Item.Obtained.IsEnemyDrop}}
            <div class="p-2 ingredients-modal">
              <img class="rounded" style="width: 30px; height: 30px;" src="/web/assets/icons/enemy_drop.png">
            </div>
          {{end}}
        </div>
      </div>
    </div>
  {{end}}
{{end}}
